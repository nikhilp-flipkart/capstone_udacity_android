<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
    </style>

</resources>
